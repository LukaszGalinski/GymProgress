<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:cursorVisible">true</item>
        <item name="textColorNormal">@color/whiteColor</item>
        <item name="android:textCursorDrawable">@color/whiteColor</item>
    </style>

    <style name="EditTextMeasures" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/hintColor</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="maxCharacterCount">10</item>
        <item name="android:gravity">left</item>
        <item name="paddingStart">@dimen/padding_labels</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textCursorDrawable">@color/whiteColor</item>
        <item name="android:hint">@string/value_0</item>
    </style>

    <style name="TextViewMeasures" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:gravity">center</item>
        <item name="paddingStart">@dimen/padding_labels</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GridLayoutTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="calendar" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/whiteColor</item>
        <item name="android:textColorSecondary">@color/whiteColor</item>
        <item name="android:windowBackground">@color/darkGray</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
