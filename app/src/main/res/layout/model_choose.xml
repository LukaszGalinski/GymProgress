<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackHalfTransparent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        style="@style/TextViewMeasures"
        android:textColor="@color/whiteColor"
        android:text="Chose your model"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/man_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextViewMeasures"
        android:gravity="start|center"
        android:buttonTint="@color/whiteColor"
        android:text="Choose MAN model"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintWidth_percent="0.5" />

    <CheckBox
        android:id="@+id/woman_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose WOMAN model"
        style="@style/TextViewMeasures"
        android:buttonTint="@color/whiteColor"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:alpha="0.8"
        android:src="@drawable/man_front"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/man_checkbox"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:src="@drawable/woman_front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/woman_checkbox"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>