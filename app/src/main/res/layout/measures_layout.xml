<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/df">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.553"
            android:alpha="0.80"
            android:src="@drawable/man_front"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/measures_weight"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/measures_weight"
            android:text="@string/measures_height"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/textView3"
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/measures_weight"
            android:text="@string/measures_chest"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/textView4"
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/measures_weight"
            android:text="@string/measures_waist"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/textView7"
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/measures_weight"
            android:text="@string/measures_hip"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/textView8"
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/measures_weight"
            android:text="@string/measures_arm"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/textView9"
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/measures_weight"
            android:text="@string/measures_thigh"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            style="@style/TextViewMeasures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/measures_calf"
            android:hint="@string/measures_weight"
            app:layout_constraintEnd_toStartOf="@id/linear_edit"
            app:layout_constraintHeight_percent="0.069"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintWidth_percent="0.25" />

        <LinearLayout
            android:id="@+id/linear_edit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintWidth_percent="0.20"
            app:layout_constraintHeight_percent="0.553"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageView4">
        <EditText
            android:id="@+id/editText"
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.125"
            android:autofillHints="0"
            android:hint="@string/value_0"
            />

        <EditText
            android:id="@+id/editText2"
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autofillHints="0"
            android:layout_weight="0.125"
            android:hint="@string/value_0" />

        <EditText
            android:id="@+id/editText3"
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autofillHints="0"
            android:layout_weight="0.125"
            android:hint="@string/value_0" />

        <EditText
            android:id="@+id/editText4"
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autofillHints="0"
            android:layout_weight="0.125"
            android:hint="@string/value_0" />

        <EditText
            android:id="@+id/editText5"
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autofillHints="0"
            android:layout_weight="0.125"
            android:hint="@string/value_0" />

        <EditText
            android:id="@+id/editText6"
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autofillHints="0"
            android:layout_weight="0.125"
            android:hint="@string/value_0" />

        <EditText
            android:id="@+id/editText7"
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autofillHints="0"
            android:layout_weight="0.125"
            android:hint="@string/value_0" />

        <EditText
            style="@style/EditTextMeasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autofillHints="0"
            android:layout_weight="0.125"
            android:hint="@string/value_0" />

        </LinearLayout>

        <Button
            android:id="@+id/measures_save"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn"
            android:text="@string/daily_save"
            android:textColor="@color/whiteColor"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <Button
            android:id="@+id/filter_results"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:text="@string/choose_date"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/whiteColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/measures_save"
            app:layout_constraintWidth_percent="0.6" />

        <Button
            android:id="@+id/reset_filters"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border"
            android:text="@string/choose_date_reset"
            android:textColor="@color/whiteColor"
            android:drawableStart="@drawable/ic_delete_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/measures_save"
            app:layout_constraintWidth_percent="0.4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_measures"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:layout_constraintTop_toBottomOf="@id/filter_results" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
